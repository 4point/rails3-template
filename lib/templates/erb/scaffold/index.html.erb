<div class="page-header">
  <h1>Listing <%= plural_table_name %></h1>
</div>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>#</th>
      <% attributes.each do |attribute| -%>
      <th><%= attribute.human_name %></th>
      <% end -%>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
    <tr>
      <td><%%= link_to <%= singular_table_name %>.id, edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
      <% attributes.each do |attribute| -%>
      <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
      <% end -%>
      <td>
        <div class="btn-group">
        <%%= link_to 'Show', <%= singular_table_name %>, :class => 'btn btn-mini' %>
        <%%= link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => 'btn btn-mini' %>
        <%%= link_to 'Destroy', <%= singular_table_name %>, <%= key_value :method, ":delete" %>, <%= key_value :data, "{ #{key_value :confirm, "'Are you sure?'"} }" %>, :class => 'btn btn-mini btn-danger' %>
        </div>
    </td>
    </tr>
    <%% end %>
  </tbody>
</table>


